{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ]
    },
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}